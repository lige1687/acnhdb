<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecnudbcourse.acnhdb.mapper.RecipesMapper">
    <!-- 根据配方名称查询配方详细信息 -->
    <select id="selectRecipeByName" parameterType="String" resultType="Recipes">
        SELECT
            Name,
            Material1,
            `#1`,
            Material2,
            `#2`,
            Material3,
            `#3`,
            Material4,
            `#4`,
            Material5,
            `#5`,
            Material6,
            `#6`
        FROM
            recipe
        WHERE
            Name = #{name}
    </select>
</mapper>
